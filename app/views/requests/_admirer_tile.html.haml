- user = req.to_user
.media.admirer
  .media-left
    = link_to user_requests_path(user) do
      = image_tag(user.original_400x400_image, :class => 'media-object')
  .media-body
    .row
      .col-lg-10
        %h4.media-heading
          .name
            = link_to truncate(user.name, length: 53), user.twitter
        .row
          .col-lg-1
            .tweet
              = link_to "https://twitter.com/#{user.twitter}", :target => '_blank' do
                %i.fa.fa-twitter
          .col-lg-11
            .description
              = user.description
      .pull-right.col-lg-2
        %span{:class => "pitch-btn btn #{tag_class(req.req_pitch)}"}
          = req.req_pitch
    %p=req.story
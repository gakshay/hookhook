- user = req.from_user
.media.admirer
  .media-left.pull-left
    = link_to user_home_path(user) do
      = image_tag(user.original_400x400_image, :class => 'media-object')
  .media-body
    .row
      .col-sm-10
        %h4.media-heading
          .name
            = link_to truncate(user.name, length: 53), user_home_path(user)
            %small.muted
              = "@#{user.twitter}"
        .muted
          = truncate(user.description, length: 120)
        %p.story
          = req.story
      .col-sm-2.text-center
        .pitch-btn.btn.btn-warning
          = req.emotion
        .actions
          %a{:href => "#"}
            %span.fa-stack
              %i.fa.fa-circle.fa-stack-2x
              %i.fa.fa-weixin.fa-inverse.fa-stack-1x
    .row
      .col-sm-10.muted
        %span.col-sm-2.tracker
          = "12 views"
        %span.col-sm-2.tracker
          = "10 likes"
        %span.col-sm-2.pull-right
          = link_to "ThankYouSoMuch", "#"

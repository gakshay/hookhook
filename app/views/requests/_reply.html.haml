- user = req.from_user
.reply{:id => "reply_#{req.id}"}
  - if req.reply.present?
    %span.text-muted
      you said ..
    %i.fa.fa-quote-left
    = req.reply
    %i.fa.fa-quote-right
  - else
    = form_for [user, req], method: :put, remote: true do |f|
      = f.text_field :reply, placeholder: "Leave a line for #{user.name} or just say ThankYouSoMuch", class: 'reply-text'
      = f.submit 'ThankYouSoMuch', class: 'btn btn-info'
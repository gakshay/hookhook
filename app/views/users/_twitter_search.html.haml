- if current_user == @user
  .twitter-panel
    #twitter-search{'data-intro' => '1. Quickly search a person by name, description or twitter handle', 'data-position' => 'bottom'}
      .input-group
        %span.input-group-addon
          %i.fa.fa-twitter.fa-2x
        %input.typeahead.form-control.input-lg{:placeholder => 'Search by person name or twitter handle', :type => 'text', :id => 'typeahead'}
        %span.input-group-addon
          %i.fa.fa-search.fa-2x
    .col-md-12.twitter-search-caption
      %span.text-muted.small
        %i.fa.fa-circle.online
        300 million+ active users
      %span.badge#request_sent
        = current_user.requests.published.count
      %span.text-muted.small
        requests sent

- if current_user == @user
  .twitter-panel
    #twitter-search{'data-intro' => '1. Easily search and add a person to your RequestBoard', 'data-position' => 'bottom'}
      .input-group
        %span.input-group-addon
          %i.fa.fa-twitter.fa-2x
        %input.typeahead.form-control.input-lg{:placeholder => 'Search by person name or twitter handle', :type => 'text', :id => 'typeahead'}
        %span.input-group-addon
          %i.fa.fa-search.fa-2x
    .col-md-6.twitter-search-caption
      %span.text-muted.small
        %i.fa.fa-circle.online
        300 million+ active users

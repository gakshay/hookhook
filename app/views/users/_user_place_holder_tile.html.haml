.white-panel.col-lg-4.col-md-4.user_placeholder
  .thumbnail.user-tile.portfolio-item
    .row
      .placeholder-user.col-lg-10.col-lg-offset-1
        %i.fa.fa-user.fa-2x.text-muted
        %i.fa.fa-link.fa-2x
        %i.fa.fa-search.text-muted.add_person
          = "Search person"
        %i.fa.fa-plus.text-muted.add_person
          = "Add #purpose"
        %i.fa.fa-paper-plane.text-muted.add_person
          = "Send request"

    .caption.post-content
      .row
        .name.col-md-12.text-center
          %i.fa.fa-twitter

    .row.hero_detail
      .col-lg-12.col-md-12.col-sm-12
        .text-muted What's your #Purpose?

        .emotions
          .row
            - Request::EMOTIONS.each_slice(3) do |emotions|
              - emotions.each do |emotion|
                %span.emotion.highlight.col-md-3.text-center.placeholder-text
                  = emotion
            %span.col-md-3.emotion.text-center.highlight.pull-right.placeholder-text
              ="#Create"
        .divider
        .text-muted
          Write your message
          %span.placeholder-text (100 words)
          %br
          %br
          %br
        .divider
        .req_freeze.text-center
          %span
            .row
              .col-lg-9.col-lg-offset-1
                .disabled-btn.placeholder-text
                  %i.fa.fa-paper-plane
                    = "Send request"
!!!
%html{:lang => "en"}
  %head
    %meta{:charset => 'utf-8'}
      %meta{:content => 'IE=Edge,chrome=1', "http-equiv" => 'X-UA-Compatible'}
        %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}
        %meta{:content => user_signed_in? ? current_user.id : '', :name => 'user-id'}
          %title= content_for?(:title) ? yield(:title) : 'Request.to'
          = csrf_meta_tags
          / Le HTML5 shim, for IE6-8 support of HTML elements
          /[if lt IE 9]
            <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
          -#%link{:href => 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css', :rel => 'stylesheet'}
          = stylesheet_link_tag "application", :media => "all"
          / For third-generation iPad with high-resolution Retina display:
          / Size should be 144 x 144 pixels
          = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
          / For iPhone with high-resolution Retina display:
          / Size should be 114 x 114 pixels
          = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
          / For first- and second-generation iPad:
          / Size should be 72 x 72 pixels
          = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
          / For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
          / Size should be 57 x 57 pixels
          = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
          / For all other devices
          / Size should be 32 x 32 pixels
          = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
          = javascript_include_tag 'application', 'data-turbolinks-track' => true
          %link{:href => 'https://fonts.googleapis.com/css?family=Montserrat:400,700', :rel => 'stylesheet', :type => 'text/css'}
          %link{:href => 'https://fonts.googleapis.com/css?family=Kaushan+Script', :rel => 'stylesheet', :type => 'text/css'}
          %link{:href => 'https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic', :rel => 'stylesheet', :type => 'text/css'}
          %link{:href => 'https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700', :rel => 'stylesheet', :type => 'text/css'}

  %body#page-top.index
    / Navigation
    %nav.navbar.navbar-default.navbar-fixed-top
      .container
        / Brand and toggle get grouped for better mobile display
        .navbar-header.page-scroll
          %button.navbar-toggle{'data-target' => '#bs-example-navbar-collapse-1', 'data-toggle' => 'collapse', :type => 'button'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          - navigation = current_user.present? ? '/' : '#page-top'
          %a.navbar-brand.page-scroll{:href => navigation}
            =render partial: 'layouts/brand'
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          .row
            - if current_user.present?
              .col-md-6.col-md-offset-1
                %ul.nav.navbar-nav
                  %li.hidden
                    %a{:href => navigation}
                  %li{class: current_page?(user_home_path(current_user)) || current_page?(user_admirers_path(current_user)) ? 'active' : ''}
                    = link_to "Profile", user_home_path(current_user), class: 'nav_menu'
                  %li{class: current_page?(root_path) ? 'active' : ''}
                    = link_to 'Explore', navigation, class: 'nav_menu'

            %ul.nav.navbar-nav.navbar-right
              %li.hidden
                %a{:href => navigation}
              - if current_user.present?
                = render partial: 'layouts/user_menu'
              - else
                = render partial: 'layouts/menu'

  - if @user.present?
    .container#logged-in-main
      .row
        .col-lg-12
          .unobtrusive-flash-container
      = yield
  - else
    .container
      .row
        .col-lg-12
          .unobtrusive-flash-container
    = yield

  %footer
    .container
      .row.text-center
        .caption.col-md-8.col-md-offset-2.text-muted
          This product is crafted with lots of
          %i.fa.fa-heart.social-buttons
          and
          %i.fa.fa-smile-o.social-buttons
          at Carnegie Mellon University, NASA Ames Research Center in California
          = link_to 'https://www.twitter.com/Request_To', target: '_blank', class: 'social-buttons'  do
            %i.fa.fa-twitter

        .col-md-2.pull-right.text-muted
          %span.copyright Copyright &copy; Request.to 2015

    %script{:src => 'http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js'}
    = render 'messages/chatroom'
    = render 'layouts/google_analytics'

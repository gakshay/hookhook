%li.dropdown
  %a.dropdown-toggle{:href => '#', "role" => 'button', "aria-expanded" => 'false', "data-toggle" => 'dropdown'}
    = image_tag(current_user.image, :class => 'img-circle', size: "25x25")
    = current_user.name
    %span.caret
  %ul.dropdown-menu{"role" => 'menu'} 
    %li= link_to 'Home', home_url(current_user.twitter)
    %li= link_to 'Logout', sign_out_path